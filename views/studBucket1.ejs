<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hoverable Sidebar Menu HTML CSS & JavaScript</title>
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  </head>
  <body>
    <nav class="sidebar">
      <div class="logo_items flex">
        <span class="nav_image">
          <img src="images/logo.png" alt="logo_img" />
        </span>
        <span class="logo_name">Appraisal</span>
      </div>

      <div class="menu_container">
        <div class="menu_items">
          <ul class="menu_item">
            <li class="item">
              <a href="studBucket1" class="link flex">
                <!-- <span class="icon">SD-1</span> -->
                <span><strong style="color: black;">SD1</strong> -Average student attendance (during PA evaluation period)</span>
              </a>
            </li>
            <li class="item">
              <a href="/studBucket2" class="link flex">
                <!-- <span class="icon">SD-2</span> -->
                <span><strong style="color: black;">SD2</strong> -Course Result (preceding semester of PA evaluation)</span>
              </a>
            </li>
            <li class="item">
              <a href="/studBucket3" class="link flex">
                <span class="icon">SD-3</span>
                <span><strong style="color: black;">SD3</strong> -Topper Marks (preceding semester of PA evaluation)</span>
              </a>
            </li>
            <li class="item">
              <a href="/studBucket4" class="link flex">
                <span class="icon">SD-4</span>
                <span><strong style="color: black;">SD4</strong> -Student feedback (during PA evaluation period)</span>
              </a>
            </li>
            <li class="item">
              <a href="/studBucket5" class="link flex">
                <span class="icon">SD-5</span>
                <span><strong style="color: black;">SD5</strong> -Mentoring</span>
              </a>
            </li>
          </ul>
        </div>

        <div class="sidebar_profile flex">
          <div class="user-details">
            <span class="nav_image">
              <img src="images/profile.jpg" alt="logo_img" />
            </span>
            <div class="data_text">
              <% if(locals){%>
                <span class="name"><%= name %></span>
              <span class="email"><%= email %></span>
              <% } %>
            </div>
          </div>
          <div class="user-logout">
            <i class="fa-solid fa-right-from-bracket fa-2x"></i>
            <a href="/logout">Logout</a>
          </div>
        </div>
      </div>
    </nav>

    <nav>
      <div class="navbar">
        <div class="bar-icon">
          <i class="fa-solid fa-bars" onclick="toggleSidebar()"></i>
        </div>

        <div class="nav-items">
          <div class="home nav-items">Home</div>
        <div class="profile nav-items">Profile</div>
        <div class="profile-img nav-items"><img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSzBXNuO6PezhC18aYH_2cYtS0I7KbxoKYdwA&usqp=CAU" onclick="toggleMenu()"></div>
        </div>

        <div class="sub-menu-wrap" id="subMenu">
          <div class="sub-menu">
            <div class="user-info">
              <img src="images/user.png">
              <% if(locals){%>
                <h3><%= name %></h3>
                <% } %>
            </div>
            <hr>
            <a href="profile" class="sub-menu-link">
              <img src="/images/profile.jpg">
              <p>Edit Profile</p>
              <span>></span>
            </a>

            <a href="profile" class="sub-menu-link">
              <img src="/images/setting.png">
              <p>Settings</p>
              <span>></span>
            </a>

            <a href="/logout" class="sub-menu-link">
              <img src="/images/logout.png">
              <p>Log Out</p>
              <span>></span>
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- <div class="buckets">
      <div class="bucket-item bucket1">Academic Development</div>
      <div class="bucket-item bucket2">Student Development</div>
      <div class="bucket-item bucket3">Administrative Bucket</div>
      <div class="bucket-item bucket4">Research Bucket</div>
      <div class="bucket-item bucket5">Consultancy and Corporate Training</div>
      <div class="bucket-item bucket6">Product Dev. Bucket</div>
    </div> -->

    <div class="buckets">
      <div class="bucket-item bucket1">
        Academic Involvement
        <div class="progress-bar">
          <div class="progress-fill" style="width: 70%"><p>Academic Involvement</p></div>
        </div>
      </div>
  
      <div class="bucket-item bucket2">
        Student Development
        <div class="progress-bar">
          <div class="progress-fill">Student Development</div> 
        </div>
      </div>
  
      <div class="bucket-item bucket3">
        Administrative Bucket
        <div class="progress-bar">
          <div class="progress-fill" style="width: 60%;">Administrative Bucket</div>
        </div>
      </div>

      <div class="bucket-item bucket3">
        Research Bucket
        <div class="progress-bar">
          <div class="progress-fill" style="width: 60%;">Research Bucket</div>
        </div>
      </div>

      <div class="bucket-item bucket3">
        Consultancy and Corporate Training Bucket
        <div class="progress-bar">
          <div class="progress-fill" style="width:60%; ">Consultancy and Corporate Training Bucket</div>
        </div>
      </div>

      <div class="bucket-item bucket3">
        Product Dev. Bucket
        <div class="progress-bar">
          <div class="progress-fill" style="width: 60%;">Product Dev. Bucket</div>
        </div>
      </div>
    </div>

    <div class="form-container">
          <form action="/save1" method="post" class="form">
            <div class="criteria">
              <label for="course-name">Course Name</label>
              <input type="text" placeholder="Enter Course Name" name="courseName">
            </div>

            <div class="criteria">
              <label for="course-attendance">Course Attendance % (only write no, without %)</label>
              <input type="number" placeholder="Enter Attendance %" name="courseAttendance">
            </div>
         
            <div class="button"><button type="submit" class="saveButton">Save</button></div>
          </form>
    </div>
          
     
  </div>

  <script>
    let subMenu = document.getElementById("subMenu");
    let sidebar = document.querySelector('.sidebar');
    let classIcon = document.querySelector('.bar-icon');
    let buckets = document.querySelector('.buckets');
    let formContainer = document.querySelector('.form-container');

    function toggleMenu() {
      subMenu.classList.toggle("open-menu");
    }

    function toggleSidebar() {
      sidebar.classList.toggle('sidebar-hidden');
      classIcon.classList.toggle('sidebar-hidden');
      buckets.classList.toggle('sidebar-hidden');
      formContainer.classList.toggle('sidebar-hidden');
    } 
  </script>
  </body>
</html>
